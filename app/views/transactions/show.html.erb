<%- model_class = Transaction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:txid) %>:</strong></dt>
  <dd><%= @transaction.txid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sender) %>:</strong></dt>
  <dd><%= @transaction.sender %></dd>
  <dt><strong><%= model_class.human_attribute_name(:recipient) %>:</strong></dt>
  <dd><%= @transaction.recipient %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @transaction.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time) %>:</strong></dt>
  <dd><%= @transaction.time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:block_id) %>:</strong></dt>
  <dd><%= @transaction.block_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              transactions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_transaction_path(@transaction), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              transaction_path(@transaction),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
