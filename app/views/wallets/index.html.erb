<%- model_class = Wallet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:balance) %></th>
      <th><%= model_class.human_attribute_name(:transactor_name) %></th>
      <th><%= model_class.human_attribute_name(:total_received) %></th>
      <th><%= model_class.human_attribute_name(:total_sent) %></th>
      <th><%= model_class.human_attribute_name(:final_balance) %></th>
      <th><%= model_class.human_attribute_name(:n_tx) %></th>
      <th><%= model_class.human_attribute_name(:final_n_tx) %></th>
      <th><%= model_class.human_attribute_name(:wallet_type) %></th>
      <th><%= model_class.human_attribute_name(:hd_position) %></th>
      <th><%= model_class.human_attribute_name(:last_block_height) %></th>
    </tr>
  </thead>
  <tbody>
    <% @wallets.each do |wallet| %>
      <tr>
        <td><%= link_to wallet.id, wallet_path(wallet) %></td>
        <td><%= link_to wallet.address[0..4] + "..." + wallet.address[-5..-1], address_link(wallet.address) %></td>
        <td><%= wallet.balance %></td>
        <td><%= link_to wallet.transactor.name, wallet.transactor %></td>
        <td><%= wallet.total_received %></td>
        <td><%= wallet.total_sent %></td>
        <td><%= wallet.final_balance %></td>
        <td><%= wallet.n_tx %></td>
        <td><%= wallet.final_n_tx %></td>
        <td><%= wallet.wallet_type %></td>
        <td><%= wallet.hd_position %></td>
        <td><%= wallet.last_block_height %></td>
      </tr>
    <% end %>
  </tbody>
</table>

