<%- model_class = Wallet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @wallet.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:balance) %>:</strong></dt>
  <dd><%= @wallet.balance %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @wallet.active %></dd>
  <dt><strong><%= model_class.human_attribute_name(:transactor_id) %>:</strong></dt>
  <dd><%= @wallet.transactor_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:transactor_type) %>:</strong></dt>
  <dd><%= @wallet.transactor_type %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              wallets_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_wallet_path(@wallet), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              wallet_path(@wallet),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
